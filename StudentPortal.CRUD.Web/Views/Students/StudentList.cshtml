@{
}

@model List<StudentPortal.CRUD.Web.Models.Entities.Student>

<div class="container">
    <div class="get-quote">
        <div class="row">
            <div class="col-sm-8 col-12">
                <h1>Students List</h1>
            </div>
            <div class="col-sm-4 col-12">
                <a class="btn btn-primary" asp-controller="Students" asp-action="Add">Add New Student</a>
            </div>
        </div>
    </div>
</div>
 

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Students" asp-action="StudentEdit" asp-route-id="@student.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>