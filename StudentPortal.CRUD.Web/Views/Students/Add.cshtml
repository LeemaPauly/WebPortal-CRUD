 @model StudentPortal.CRUD.Web.Models.AddStudentModel
<div class="container">
    <div class="d-flex justify-content-center align-items-center">

        <div class="get-quote" style="background-color: rgba(255, 255, 255, 0.8); padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
            <div class="row">
                <div class="col-12">
                    <div class="container">
                        <div class="get-quote">
                            <div class="row">
                                <div class="col-sm-8 col-12">
                                    <h1>Add Student</h1>
                                </div>
                                <div class="col-sm-4 col-12">
                                    <a class="btn btn-primary" asp-controller="Students" asp-action="StudentList">Back Student List</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form method="post" class="row justify-content-center">
                        <div class="col-sm-4">
                            <div class="mt-3">
                                <label class="form-label">Name</label>
                                <input type="text" class="form-control" asp-for="Name" />
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="mt-3">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" asp-for="Email" />
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="mt-3">
                                <label class="form-label">Phone</label>
                                <input type="text" class="form-control" asp-for="Phone" />
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="mt-3">
                                <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed" />
                                <label class="form-check-label" for="Subscribed">Subscribed</label>
                            </div>
                        </div>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary">Save</button>
                            @* <button type="submit" class="btn btn-danger ms-3" asp-controller="Students" asp-action="StudentList">Cancel</button> *@
                            <button type="button" class="btn btn-danger ms-3" onclick="window.location.reload();">Clear</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
